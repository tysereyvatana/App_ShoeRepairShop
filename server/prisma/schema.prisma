generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  DISABLED
}

enum StaffStatus {
  ACTIVE
  INACTIVE
}

enum PurchaseStatus {
  DRAFT
  RECEIVED
  CANCELLED
}

enum ServiceStatus {
  RECEIVED
  CLEANING
  REPAIRING
  READY
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  UNPAID
  PARTIAL
  PAID
}

enum StockMoveType {
  IN
  OUT
  ADJUST
  SERVICE_OUT
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
  OTHER
}

enum ARType {
  CHARGE
  PAYMENT
  ADJUSTMENT
  REFUND
}

model User {
  id        String     @id @default(cuid())
  username  String     @unique
  email     String?    @unique
  password  String
  status    UserStatus @default(ACTIVE)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?

  roles              UserRole[]
  staff              Staff?

  payments           Payment[]          @relation("PaymentReceivedBy")
  otherIncome        OtherIncome[]      @relation("OtherIncomeReceivedBy")
  expenses           Expense[]          @relation("ExpensePaidBy")

  stockMoves         StockMovement[]    @relation("StockMoveBy")
  arTxCreated        ARTransaction[]    @relation("ARCreatedBy")
  createdPurchases   Purchase[]         @relation("PurchaseCreatedBy")

  serviceStatusEdits ServiceStatusHistory[] @relation("ServiceHistoryChangedBy")

  auditLogs          AuditLog[]

  @@index([status])
  @@index([createdAt])
}

model Role {
  id    String @id @default(cuid())
  name  String @unique
  users UserRole[]
}

model UserRole {
  userId String
  roleId String

  user   User @relation(fields: [userId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  action    String
  entity    String?
  entityId  String?
  metaJson  String?
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([entity, entityId])
}

model Staff {
  id        String      @id @default(cuid())
  code      String?     @unique
  name      String
  phone     String?
  position  String?
  salary    Decimal     @default(0) @db.Decimal(12, 2)
  status    StaffStatus @default(ACTIVE)

  userId    String?     @unique
  user      User?       @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  assignedServices ServiceOrder[] @relation("AssignedStaff")

  @@index([name])
  @@index([phone])
  @@index([status])
}

model Customer {
  id        String   @id @default(cuid())
  code      String?  @unique
  name      String
  phone     String?
  email     String?
  address   String?
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  account   CustomerAccount?
  services  ServiceOrder[]
  arTx      ARTransaction[]

  @@index([name])
  @@index([phone])
}

model CustomerAccount {
  id          String   @id @default(cuid())
  customerId  String   @unique
  customer    Customer @relation(fields: [customerId], references: [id])

  creditLimit Decimal  @default(0) @db.Decimal(12, 2)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Supplier {
  id        String   @id @default(cuid())
  code      String?  @unique
  name      String
  phone     String?
  email     String?
  address   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  purchases Purchase[]

  @@index([name])
  @@index([phone])
}

model ItemCategory {
  id        String   @id @default(cuid())
  name      String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  items Item[]
}

model Item {
  id           String   @id @default(cuid())
  sku          String?  @unique
  barcode      String?  @unique
  name         String

  categoryId   String?
  category     ItemCategory? @relation(fields: [categoryId], references: [id])

  unit         String?
  cost         Decimal  @default(0) @db.Decimal(12, 2)
  price        Decimal  @default(0) @db.Decimal(12, 2)
  reorderLevel Int      @default(0)
  active       Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  purchaseLines PurchaseLine[]
  movements     StockMovement[]
  serviceParts  ServicePart[]

  @@index([name])
  @@index([active])
}

model Purchase {
  id          String         @id @default(cuid())
  supplierId  String
  supplier    Supplier       @relation(fields: [supplierId], references: [id])

  invoiceNo   String?
  status      PurchaseStatus @default(DRAFT)
  purchasedAt DateTime       @default(now())
  receivedAt  DateTime?

  subTotal    Decimal @default(0) @db.Decimal(12, 2)
  discount    Decimal @default(0) @db.Decimal(12, 2)
  total       Decimal @default(0) @db.Decimal(12, 2)

  createdByUserId String?
  createdByUser   User? @relation("PurchaseCreatedBy", fields: [createdByUserId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  lines      PurchaseLine[]

  @@index([supplierId, purchasedAt])
  @@index([status])
}

model PurchaseLine {
  id         String   @id @default(cuid())
  purchaseId String
  itemId     String

  purchase   Purchase @relation(fields: [purchaseId], references: [id])
  item       Item     @relation(fields: [itemId], references: [id])

  qty        Int
  unitCost   Decimal  @db.Decimal(12, 2)
  lineTotal  Decimal  @db.Decimal(12, 2)

  @@index([purchaseId])
  @@index([itemId])
}

model StockMovement {
  id        String        @id @default(cuid())
  itemId    String
  item      Item          @relation(fields: [itemId], references: [id])

  type      StockMoveType
  qty       Int
  unitCost  Decimal?      @db.Decimal(12, 2)

  refType   String?
  refId     String?
  note      String?

  createdByUserId String?
  createdByUser   User? @relation("StockMoveBy", fields: [createdByUserId], references: [id])

  createdAt DateTime @default(now())

  @@index([itemId, createdAt])
  @@index([refType, refId])
}

model ServiceOrder {
  id          String        @id @default(cuid())
  code        String        @unique


  // Optional VET shipping code (printed on VET label)
  vetCode     String?

  customerId  String
  customer    Customer      @relation(fields: [customerId], references: [id])

  assignedStaffId String?
  assignedStaff   Staff?     @relation("AssignedStaff", fields: [assignedStaffId], references: [id])

  status        ServiceStatus  @default(RECEIVED)
  paymentStatus PaymentStatus  @default(UNPAID)

  // Shoe repair specific
  shoeBrand      String?
  shoeColor      String?
  shoeSize       String?
  shoeType       String?
  pairCount      Int           @default(1)
  urgent         Boolean       @default(false)
  beforePhotoUrl String?
  afterPhotoUrl  String?

  // Generic notes (kept for compatibility)
  deviceName    String?
  deviceSerial  String?
  problemDesc   String?

  receivedAt  DateTime      @default(now())
  promisedAt  DateTime?

  subTotal    Decimal @default(0) @db.Decimal(12, 2)
  discount    Decimal @default(0) @db.Decimal(12, 2)
  total       Decimal @default(0) @db.Decimal(12, 2)

  lines       ServiceLine[]
  parts       ServicePart[]
  history     ServiceStatusHistory[]
  payments    Payment[]
  arTx        ARTransaction[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  @@index([customerId])
  @@index([status, receivedAt])
  @@index([paymentStatus])
}

model RepairService {
  id                 String   @id @default(cuid())
  name               String   @unique
  defaultPrice       Decimal  @default(0) @db.Decimal(12, 2)
  defaultDurationMin Int?
  active             Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  lines ServiceLine[]

  @@index([name])
  @@index([active])
}

model ServiceLine {
  id             String       @id @default(cuid())
  serviceOrderId String
  serviceOrder   ServiceOrder @relation(fields: [serviceOrderId], references: [id])

  repairServiceId String?
  repairService   RepairService? @relation(fields: [repairServiceId], references: [id])

  description    String
  qty            Int @default(1)
  price          Decimal @db.Decimal(12, 2)

  @@index([serviceOrderId])
  @@index([repairServiceId])
}

model ServicePart {
  id             String       @id @default(cuid())
  serviceOrderId String
  itemId         String

  serviceOrder   ServiceOrder @relation(fields: [serviceOrderId], references: [id])
  item           Item         @relation(fields: [itemId], references: [id])

  qty            Int
  unitPrice      Decimal @db.Decimal(12, 2)

  @@index([serviceOrderId])
  @@index([itemId])
}

model ServiceStatusHistory {
  id             String       @id @default(cuid())
  serviceOrderId String
  serviceOrder   ServiceOrder @relation(fields: [serviceOrderId], references: [id])

  status         ServiceStatus
  note           String?

  changedByUserId String?
  changedByUser   User? @relation("ServiceHistoryChangedBy", fields: [changedByUserId], references: [id])

  changedAt      DateTime @default(now())

  @@index([serviceOrderId, changedAt])
}

model Payment {
  id             String        @id @default(cuid())
  serviceOrderId String?
  serviceOrder   ServiceOrder? @relation(fields: [serviceOrderId], references: [id])

  amount         Decimal       @db.Decimal(12, 2)
  method         PaymentMethod @default(CASH)
  paidAt         DateTime      @default(now())
  note           String?

  receivedByUserId String?
  receivedBy       User? @relation("PaymentReceivedBy", fields: [receivedByUserId], references: [id])

  @@index([paidAt])
  @@index([serviceOrderId])
}

model ARTransaction {
  id          String   @id @default(cuid())

  customerId  String
  customer    Customer @relation(fields: [customerId], references: [id])

  serviceOrderId String?
  serviceOrder   ServiceOrder? @relation(fields: [serviceOrderId], references: [id])

  type        ARType
  amount      Decimal  @db.Decimal(12, 2)
  refType     String?
  refId       String?
  note        String?

  createdByUserId String?
  createdByUser   User? @relation("ARCreatedBy", fields: [createdByUserId], references: [id])

  createdAt   DateTime @default(now())

  @@index([customerId, createdAt])
  @@index([serviceOrderId])
  @@index([refType, refId])
}

model OtherIncome {
  id            String        @id @default(cuid())
  title         String
  amount        Decimal       @db.Decimal(12, 2)
  method        PaymentMethod @default(CASH)
  receivedAt    DateTime      @default(now())
  note          String?

  receivedByUserId String?
  receivedBy       User? @relation("OtherIncomeReceivedBy", fields: [receivedByUserId], references: [id])

  @@index([receivedAt])
}

model Expense {
  id          String   @id @default(cuid())
  title       String
  amount      Decimal  @db.Decimal(12, 2)
  paidAt      DateTime @default(now())
  note        String?

  paidByUserId String?
  paidBy       User? @relation("ExpensePaidBy", fields: [paidByUserId], references: [id])

  @@index([paidAt])
}
